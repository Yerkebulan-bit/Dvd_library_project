<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="DVDLibrary" namespace="/" extends="struts-default">
        <action name="DVDAction" class="com.dvd.controller.AddDVDAction" method="execute">
            <result name="success">success.jsp</result>
            <result name="error">add_dvd.jsp</result>
        </action>
        <action name="setPreference" class="com.dvd.controller.SetPreferencesAction" method="execute">
            <result name="success">index.jsp</result>
        </action>
        <action name="loginAction" class="com.dvd.controller.LoginAction" method="execute">
            <result name="success">index.jsp</result>
            <result name="error">login.jsp</result>
        </action>
    </package>
</struts>
